= content_for :title, 'New Reply'


%section.section-dark.main-header
  .container-fluid
    .row-fluid
      .span6
        %h1 New Reply
        %p
          = link_to 'Back to Discussion', @original == nil ? discussion_path(@discussion) : find_reply_path(@original)

%section.section.section-padded
  .container-fluid
    .row-fluid

      .span9.pull-right
        - if @original.presence
          = render 'forums/replies/post', :reply => @original
          %hr
        = render 'forums/replies/form', :reply => @reply, :discussion => @discussion, :revision => @revision, :show_archive => false

      .span3.sidebar.pull-left
        = render 'forums/shared/navigation', :forums => @forums, :categories => @categories, :active => @category.id
