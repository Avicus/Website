= form_for([:admin, @server_group]) do |f|
  - if @server_group.errors.any?
    .alert.alert-danger
      #error_explanation
        %h4 Errors:
        %ul
          - @server_group.errors.full_messages.each do |msg|
            %li #{msg}

  .field
    = f.label :name
    = f.text_field :name, :disabled => @editable.include?(:name) ? nil : ''

  .field
    = f.label :description
    = f.text_field :description, :disabled => @editable.include?(:description) ? nil : ''

  .field
    = f.label :slug
    = f.text_field :slug, :disabled => @editable.include?(:slug) ? nil : ''

  .field
    = f.label :icon, 'Icon - Format: mat_name:damage:special (Damage and special are optional)'
    = f.text_field :icon, :disabled => @editable.include?(:icon) ? nil : ''
    %p
      Special Types:
      %br
      g - glow
      %br
      r - random damage (overrides damage value specified)

  .actions
    = f.submit :class => 'btn btn-success'
