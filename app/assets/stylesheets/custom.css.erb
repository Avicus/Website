
.banner {
  background: #000;
  position: relative;
  height: 400px;
  width: 100%;
  overflow: hidden;
}

.banner video {
  opacity: 0.8;
  position: relative;
  z-index: 0;
  display: block;
}

.banner .overlay {
  position: absolute;
  z-index: 1;
  color: #f3f3f3;
  text-align: center;
  width: 90%;
  height: auto;
  overflow: hidden;
  margin: auto;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
}

.banner .overlay h1 {
  color: #fff;
  font-size: 60px;
  line-height: 60px;
  font-weight: 900;
  text-transform: uppercase;
  text-shadow: 2px 2px 2px #111;
}

.banner .overlay h3 {
  color: #fff;
  font-size: 30px;
  line-height: 30px;
  font-weight: 500;
  text-transform: uppercase;
  text-shadow: 2px 2px 2px #111;
}

.banner .overlay p {
  margin: 0;
}

.emoji {
  vertical-align: middle;
  height: 1.3em;
}

#content a.emoji-link {
  opacity: 0.8;
  text-decoration: none;
}

#content a.emoji-link:hover {
  opacity: 1.0;
  text-decoration: none;
}

.reactions {
  padding: 5px 10px;
  font-size: 13px;
  border: 1px solid #f3f3f3;
}

.forum-table td {
  line-height: 21px !important;
}

.peek-rblineprof-file pre {
  white-space: pre;
  word-wrap: normal;
}

/* Home Page */
